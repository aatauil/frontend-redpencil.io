<section class="contact-form">
  <form action="" class="contact-form-inner">
    <div>
      <label for="name" class="sr-only">name </label>
      <div class="input-wrapper">
        <div class="input-icon-wrapper">
          <svg class="h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd">
            </path>
          </svg>
        </div>
        <input type="text" name="name" id="name" class="input-box" placeholder="John">
      </div>
    </div>

    <div class="flex space-x-6">
      <div class="flex-1">
        <label for="email" class="sr-only"> email </label>
        <div class="input-wrapper">
          <div class="input-icon-wrapper">
            <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"
              fill="currentColor" aria-hidden="true">
              <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
              <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
            </svg>
          </div>
          <input type="text" name="email" id="email" class="input-box" placeholder="you@example.com">
        </div>
      </div>
      <div class="flex-1">
        <label for="tel" class="sr-only"> Telephone number </label>
        <div class="input-wrapper">
          <div class="input-icon-wrapper">
            <svg class="h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20"
              xmlns="http://www.w3.org/2000/svg">
              <path
                d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z">
              </path>
            </svg>
          </div>
          <input type="text" name="tel" id="tel" class="input-box" placeholder="+12 345678910">
        </div>
      </div>
    </div>
    <div>
      <label for="message">
        <textarea name="message" class="textarea-box" placeholder="message" id="message" cols="30" rows="10"></textarea>
      </label>
    </div>
    <button type="submit" class="submit-button">
      <span>Send</span>
      <svg class="text-red-600 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
        <path fill="none" d="M0 0h24v24H0z" />
        <path
          d="M3 13h6v-2H3V1.846a.5.5 0 0 1 .741-.438l18.462 10.154a.5.5 0 0 1 0 .876L3.741 22.592A.5.5 0 0 1 3 22.154V13z"
          fill="currentColor" />
      </svg>
    </button>
  </form>
</section>

